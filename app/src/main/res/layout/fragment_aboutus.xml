<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="50dp"
    tools:context=".AboutusFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/orange"
                android:clickable="false"
                android:elevation="10dp"
                android:focusable="false"
                android:fontFamily="@font/bungee"
                android:gravity="center"
                android:text="@string/about_us"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Button.Triangle" />

            <TextView
                android:id="@+id/textView2"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textStyle="normal|italic"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="@string/about_us_des" />

            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="normal|italic"
                android:textColor="@color/orange"
                android:fontFamily="@font/baloo_tamma"
                android:textSize="30sp"
                android:text="@string/customer_service_offer"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/hotel_svgrepo_com" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/unique_stay"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/climbing_adventure_silhouette_svgrepo_com" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/adventure_sport"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/low_price_svgrepo_com" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/lowest_price"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/verified_protection_svgrepo_com" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/verified_and_stay"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/inner_material_card_view_for_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/bungee_jumping_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/customer_service_svgrepo_com" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/customer_supprt"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>